@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LogInLayout.cshtml";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome To Libery Family Group System</h1>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <form class="user" method="post">
                                <div class="form-group">
                                    <input asp-for="Input.Username" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="username">
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Password">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="Input.RememberMe" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Remember Me</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary  btn-user btn-block">Log in</button>
                                </div>
                                @*<a href="index.html" class="btn btn-primary btn-user btn-block">
                                    Login
                                </a>*@
                                <hr>

                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
